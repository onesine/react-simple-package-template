{
    "compilerOptions": {
        "target": "esnext",
        "lib": [ "dom", "esnext" ],
        "module": "esnext",
        "jsx": "react",
        "moduleResolution": "node",

        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": true,

        "esModuleInterop": true,
        "baseUrl": "src/",
        "declaration": true,
        "declarationDir": "dist",
        "inlineSources": true,
        "sourceMap": true,
        "rootDir": "src",

    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}